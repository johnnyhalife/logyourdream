namespace :ci do
  desc 'default task it;s doing nothing'
  task :default do
	p 'this is the default task'
  end
  
  desc 'Measures test coverage'
  task :coverage do
    rm_f "./tmp/coverage"
    rm_f "coverage.data"
    rcov = "rcov --rails --aggregate coverage.data --text-summary -Ilib"
    system("#{rcov} --no-html ./test/*.test.rb")
    system("open coverage/index.html") if PLATFORM['darwin']
  end
end